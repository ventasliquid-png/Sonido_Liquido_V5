<template>
  <div class="flex h-screen bg-[#1a050b] text-gray-300 font-sans overflow-hidden">
    <!-- Sidebar / Tree -->
    <aside class="w-80 flex flex-col border-r border-rose-900/20 bg-[#1a050b]">
      <!-- Header -->
      <div class="h-14 flex items-center px-4 border-b border-rose-900/20 bg-[#2e0a13]/50 backdrop-blur-sm">
        <h2 class="text-lg font-bold text-rose-400 tracking-wide">RUBROS</h2>
        <div class="ml-auto flex gap-2">
          <button 
            @click="createNewRoot"
            class="w-8 h-8 rounded hover:bg-rose-500/20 text-rose-400 flex items-center justify-center transition-colors"
            title="Nuevo Rubro Raíz"
          >
            <i class="fa-solid fa-plus"></i>
          </button>
          <button 
            @click="fetchRubros"
            class="w-8 h-8 rounded hover:bg-white/5 text-gray-400 hover:text-white flex items-center justify-center transition-colors"
            title="Recargar"
          >
            <i class="fa-solid fa-rotate"></i>
          </button>
        </div>
      </div>

      <!-- Tree Content -->
      <div class="flex-1 overflow-y-auto p-2 custom-scrollbar">
        <div v-if="loading" class="flex justify-center py-8">
          <i class="fa-solid fa-circle-notch fa-spin text-rose-500"></i>
        </div>
        
        <div v-else-if="rubros.length === 0" class="text-center py-8 text-gray-500 text-sm">
          No hay rubros definidos.
          <br>
          <button @click="createNewRoot" class="text-rose-400 hover:underline mt-2">Crear el primero</button>
        </div>

        <div v-else class="space-y-0.5">
          <RubroTreeItem 
            v-for="rubro in rubros" 
            :key="rubro.id" 
            :rubro="rubro"
            :selected-id="selectedRubro?.id"
            @select="selectRubro"
          />
        </div>
      </div>
    </aside>

    <!-- Main Content / Form -->
    <main class="flex-1 flex flex-col bg-[#0f0306] relative">
      <!-- Empty State -->
      <div v-if="!selectedRubro && !isCreating" class="absolute inset-0 flex flex-col items-center justify-center text-gray-600">
        <i class="fa-solid fa-sitemap text-6xl mb-4 opacity-20"></i>
        <p>Selecciona un rubro para editar</p>
      </div>

      <!-- Form -->
      <div v-else class="max-w-2xl mx-auto w-full p-8">
        <div class="bg-[#1a050b] border border-rose-900/20 rounded-lg shadow-2xl overflow-hidden">
          <!-- Header Form -->
          <div class="px-6 py-4 border-b border-rose-900/20 bg-[#2e0a13]/30 flex items-center justify-between">
            <h3 class="text-lg font-medium text-white">
              {{ isCreating ? 'Nuevo Rubro' : 'Editar Rubro' }}
            </h3>
            <div class="flex gap-2">
              <button 
                v-if="!isCreating"
                @click="createNewChild"
                class="px-3 py-1.5 bg-rose-500/10 hover:bg-rose-500/20 text-rose-400 text-xs rounded border border-rose-500/20 transition-colors"
              >
                <i class="fa-solid fa-level-down-alt mr-1"></i>
                Agregar Sub-rubro
              </button>
              <button 
                v-if="!isCreating"
                @click="confirmDelete"
                class="px-3 py-1.5 bg-red-500/10 hover:bg-red-500/20 text-red-400 text-xs rounded border border-red-500/20 transition-colors"
              >
                <i class="fa-solid fa-trash mr-1"></i>
                Eliminar
              </button>
            </div>
          </div>

          <!-- Body Form -->
          <div class="p-6 space-y-6">
            <!-- Padre Info -->
            <div v-if="form.padre_id" class="bg-rose-900/10 border border-rose-900/20 rounded px-4 py-2 flex items-center gap-3">
              <i class="fa-solid fa-level-up-alt text-rose-500/50"></i>
              <div>
                <span class="text-xs text-rose-400/70 uppercase tracking-wider font-bold">Rubro Padre</span>
                <div class="text-rose-200 text-sm">{{ getRubroName(form.padre_id) }}</div>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-6">
              <!-- Código -->
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">CÓDIGO</label>
                <input 
                  v-model="form.codigo"
                  type="text" 
                  class="w-full bg-[#0a0204] border border-rose-900/30 rounded px-3 py-2 text-white focus:outline-none focus:border-rose-500 focus:ring-1 focus:ring-rose-500 transition-colors font-mono"
                  placeholder="Ej: BEB"
                  maxlength="3"
                >
              </div>

              <!-- Activo -->
              <div class="flex items-end pb-2">
                <label class="flex items-center gap-2 cursor-pointer group">
                  <div class="relative">
                    <input type="checkbox" v-model="form.activo" class="sr-only peer">
                    <div class="w-10 h-5 bg-gray-800 rounded-full peer-checked:bg-rose-600 transition-colors"></div>
                    <div class="absolute left-1 top-1 w-3 h-3 bg-white rounded-full peer-checked:translate-x-5 transition-transform"></div>
                  </div>
                  <span class="text-sm text-gray-400 group-hover:text-gray-300 transition-colors">Activo</span>
                </label>
              </div>
            </div>

            <!-- Nombre -->
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">NOMBRE</label>
              <input 
                v-model="form.nombre"
                type="text" 
                class="w-full bg-[#0a0204] border border-rose-900/30 rounded px-3 py-2 text-white focus:outline-none focus:border-rose-500 focus:ring-1 focus:ring-rose-500 transition-colors"
                placeholder="Ej: Bebidas sin Alcohol"
              >
            </div>
          </div>

          <!-- Footer Actions -->
          <div class="px-6 py-4 bg-[#0a0204]/50 border-t border-rose-900/20 flex justify-end gap-3">
            <button 
              @click="cancelEdit"
              class="px-4 py-2 text-gray-400 hover:text-white text-sm transition-colors"
            >
              Cancelar
            </button>
            <button 
              @click="saveRubro"
              :disabled="saving"
              class="px-6 py-2 bg-rose-600 hover:bg-rose-500 text-white text-sm font-medium rounded shadow-lg shadow-rose-900/20 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
            >
              <i v-if="saving" class="fa-solid fa-circle-notch fa-spin"></i>
              {{ saving ? 'Guardando...' : 'Guardar Cambios' }}
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>
</template>

<script setup>
import { ref, onMounted, computed } from 'vue';
import RubroTreeItem from './components/RubroTreeItem.vue';
import rubrosApi from '../../services/rubrosApi.js';
import { useNotificationStore } from '@/stores/notification.js';

const rubros = ref([]);
const loading = ref(true);
const saving = ref(false);
const selectedRubro = ref(null);
const isCreating = ref(false);

const form = ref({
  id: null,
  codigo: '',
  nombre: '',
  padre_id: null,
  activo: true
});

// Helper para aplanar el árbol y buscar nombres
const flatRubros = computed(() => {
  const flatten = (list) => {
    let result = [];
    list.forEach(r => {
      result.push(r);
      if (r.hijos) result = result.concat(flatten(r.hijos));
    });
    return result;
  };
  return flatten(rubros.value);
});

const getRubroName = (id) => {
  const r = flatRubros.value.find(x => x.id === id);
  return r ? r.nombre : 'Desconocido';
};

const fetchRubros = async () => {
  loading.value = true;
  try {
    const { data } = await rubrosApi.getAll();
    rubros.value = data;
  } catch (error) {
    console.error('Error cargando rubros:', error);
    // useNotificationStore().error('Error al cargar rubros');
  } finally {
    loading.value = false;
  }
};

const selectRubro = (rubro) => {
  if (isCreating.value) {
    if (!confirm('Hay cambios sin guardar. ¿Descartar?')) return;
  }
  isCreating.value = false;
  selectedRubro.value = rubro;
  form.value = { ...rubro }; // Copia simple
};

const createNewRoot = () => {
  selectedRubro.value = null;
  isCreating.value = true;
  form.value = {
    id: null,
    codigo: '',
    nombre: '',
    padre_id: null,
    activo: true
  };
};

const createNewChild = () => {
  if (!selectedRubro.value) return;
  const parent = selectedRubro.value;
  isCreating.value = true;
  selectedRubro.value = null; // Deseleccionar visualmente el padre para enfocar en el nuevo
  form.value = {
    id: null,
    codigo: '',
    nombre: '',
    padre_id: parent.id,
    activo: true
  };
};

const cancelEdit = () => {
  isCreating.value = false;
  selectedRubro.value = null;
  form.value = { id: null, codigo: '', nombre: '', padre_id: null, activo: true };
};

const saveRubro = async () => {
  if (!form.value.codigo || !form.value.nombre) {
    alert('Código y Nombre son obligatorios');
    return;
  }

  saving.value = true;
  try {
    if (form.value.id) {
      await rubrosApi.update(form.value.id, form.value);
    } else {
      await rubrosApi.create(form.value);
    }
    await fetchRubros();
    cancelEdit(); // O seleccionar el nuevo/editado
  } catch (error) {
    console.error('Error guardando rubro:', error);
    alert(error.response?.data?.detail || 'Error al guardar');
  } finally {
    saving.value = false;
  }
};

const confirmDelete = async () => {
  if (!selectedRubro.value) return;
  if (!confirm(`¿Estás seguro de eliminar el rubro "${selectedRubro.value.nombre}"?`)) return;

  try {
    await rubrosApi.delete(selectedRubro.value.id);
    await fetchRubros();
    cancelEdit();
  } catch (error) {
    console.error('Error eliminando rubro:', error);
    alert(error.response?.data?.detail || 'Error al eliminar');
  }
};

onMounted(() => {
  fetchRubros();
});
</script>

